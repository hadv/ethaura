# Server Configuration
PORT=3001

# Environment Mode
# - 'development': Auto-allows all ngrok domains (*.ngrok.app, *.ngrok.dev, etc.)
#                  Good for testing, easier to work with
# - 'production':  Only allows exact FRONTEND_URL (more secure)
#                  Recommended for production deployment
NODE_ENV=development

# Database
DATABASE_PATH=./data/passkeys.db

# Backup Configuration
BACKUP_DIR=./data/backups
BACKUP_INTERVAL_HOURS=24

# CORS - Frontend URL
# For local development: http://localhost:5173 or http://localhost:3000
# For ngrok: https://ethersafe.ngrok.app
FRONTEND_URL=https://ethersafe.ngrok.app

# Security
# Generate a secure random string for JWT secret
JWT_SECRET=your_jwt_secret_here_change_in_production

